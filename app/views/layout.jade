doctype html
html
  head
    block titleContent
        meta(name="description" content="Neg5 is a quiz bowl tournament management system. It is meant to help tournament directors automate their registrations, game inputs, and statistis generation so that they can focus on running their tournament.")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon" href="/img/icon.ico")
    link(href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/sandstone/bootstrap.min.css", rel="stylesheet", integrity="sha384-QqZs0aSOGFan3GWVdP4PyCBp6icaF/4n8Q+wsmZUTiiVIqE4r4tFYcb8Osf+8y45", crossorigin="anonymous")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
    //- link(href="https://fonts.googleapis.com/css?family=Droid+Sans" rel='stylesheet' type='text/css')
    link(href="https://fonts.googleapis.com/css?family=Open+Sans" rel='stylesheet' type='text/css')
    link(rel='stylesheet' href='/css/min/bundle.css')

    block extrastylesheets

    block extrascripts

    //- Declaration
    mixin sidebar
        nav(class="cd-side-nav" style="position:fixed")
            form(name="tdid")
                input(type="hidden" value="#{tournamentd}" id="tdid_input")
            ul
                li(class="cd-label") #{tournamentd.name}

                li(class="has-children overview active")

                    ul
                        li
                            a(href="/home") Home
                            a(href="/tournaments") Your Tournaments
                            a(href="/create") Create a Tournament

            ul
                li(class="cd-label")
                li(class="action-btn")
                    a(href="/logout" style="background-color:rgb(0, 136, 136);") Logout

    //- Use

    //- Declaration
    mixin navbar

        nav(class="navbar navbar-default top-nav-bar navbar-fixed-top nf-dark-blue nf-shadow")
            div(class="container")
                if tournamentd
                    div(class="collapse navbar-collapse")
                        ul(class="nav navbar-nav")
                            li
                                a(href="/tournaments" style="color:white;") Home
                                    
                        ul(class="nav navbar-nav navbar-right")
                            li(class="list-element")
                                a(href="/account" style='color:white;') #{tournamentd}
                            li(class="list-element")
                                a(href="/logout" style='color:white;') Logout


                if !tournamentd
                    div(class="collapse navbar-collapse navbar-right")
                        ul(class="nav navbar-nav")
                            li(class="list-element")
                                a(href="/" style="color:white") Login
                            li(class="list-element")
                                a(href="/about" style="color:white") About Neg 5
                            li(class="list-element")
                                a(href="https://github.com/mostafab/neg5" style="color:white")
                                     i(class="fa fa-github" style="margin-left:10px")
    //- Use

    mixin navbar-bottom

        nav(class="navbar navbar-default top-nav-bar navbar-fixed-bottom nf-dark-blue")
            div(class="container")
                if !tournament
                    div(class="collapse navbar-collapse")
                        ul(class="nav navbar-nav navbar-right")
                            li(class='list-element')
                                a(href='/search' style='color:white') Find Tournament Results

                        ul(class="nav navbar-nav")
                            li(class="list-element")
                                a(style="color:white;width:100%" class='progress-indicator' role='progressbar' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100') Neg 5 : Quizbowl for the Cloud

                else
                    div(class="collapse navbar-collapse")
                        ul(class="nav navbar-nav navbar-right")
                            li(class='list-element')
                                a(href='/search' style='color:white') Find Tournament Results
                        ul(class="nav navbar-nav")
                            li(class="list-element")
                                a(style="color:white;width:100%" class='progress-indicator' role='progressbar' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100') #{tournament.tournament_name}
    //- Use


  body(class="body nf-background-main")
    block content
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js')
    script(src='/app.bundle.js')
