div(class="panel nf-panel panel-default")
    div(class="collapsable nf-panel-heading nf-dark-blue") Custom Team Statistics
    div(class="panel-body nf-panel-body tournament-panel")
            div(class="col-md-12")
                form(target="_blank" method="get" action='{{"/t/" + tournamentId + "/stats/filter/teams"}}')
                    .row
                        .col-lg-4.col-md-4.col-sm-6
                            select(class='form-control nf-input' ng-attr-size='{{Statistics.teams.length}}' ng-model='Statistics.selectedTeams' ng-options='team.name for team in Statistics.teams | orderBy:"name" track by team.id' multiple)
                        .col-lg-4.col-md-4.col-sm-6
                            .row
                                input(class="form-control nf-input " type="number" name="minround" placeholder="Min Round")
                            br
                            .row
                                input(class="form-control nf-input" type="number" name="maxround" placeholder="Max Round")
                            br
                            .row
                                button(type="button" class="btn btn-md btn-block nf-button nf-blue custombutton" data-post-url="/t/{{tournamentId}}/stats/filter/teams") Generate Team Stats
                            .row
                                button(type="button" class="btn btn-md nf-button btn-block nf-blue custombutton" data-post-url="/t/{{tournamentId}}/stats/filter/players") Generate Player Stats
