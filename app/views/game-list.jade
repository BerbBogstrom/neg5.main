div(class="table-responsive" id="gamediv")
    div(class="row" style="width:95%")
        div(class="input-group col-lg-4 col-md-4 col-sm-4" style="margin-left:20px;margin-bottom:20px;")
            span(class='input-group-addon btn nf-blue' id='refresh-games' data-href='/t/' + tournament.shortID + "/games")
                i(class='fa fa-refresh')
            input(type="text" class="form-control search btn-shadow" placeholder="Filter By Round or Team")

    div(class="panel panel-default")
        table(class="table table-condensed btn-shadow")
            thead
                tr
                    th(class="table-head sort sortable" data-sort='round') Round
                    th(class="table-head sort sortable" data-sort='phases-n') Phase(s)
                    th(class="table-head sort sortable" data-sort='team1name') Team 1
                    th(class="table-head sort sortable" data-sort='team2name') Team 2
                    th(class="table-head sort sortable" data-sort='tuh') Tossups Heard
                    if admin
                        th(class="table-head")
            tbody(id="gametablebody" class="list")
                each game in tournament.games
                    if tournament.teamMap[game.team1.team_id] && tournament.teamMap[game.team2.team_id]
                        tr(class='clickable-link game-anchor tournament-panel nf-tr' data-href="/t/" + tournament.shortID + "/games/" + game.shortID id='game_#{game.shortID}')
                            td(class="round game-list-element bordered-game-list-element round") #{game.round}
                            td(class="phase game-list-element phases-n")
                                each phase in tournament.phases
                                    each includedPhase in game.phase_id
                                        if phase.phase_id == includedPhase
                                            li(style='list-style-type:none') #{phase.name}
                            td(class="team1name game-list-element team1name") #{tournament.teamMap[game.team1.team_id].name} (#{game.team1.score})
                            td(class="team2name game-list-element team2name") #{tournament.teamMap[game.team2.team_id].name} (#{game.team2.score})
                            td(class="tuheard game-list-element tuh") #{game.tossupsheard}
                            if admin
                                td
                                    form()
                                        input(type="hidden" name="gameid_form" value='#{game.shortID}')
                                        input(type="hidden" name="tournament_idgame" value="#{tournament._id}")
                                        button(type="button" class="btn btn-sm nf-red deletebutton btn-shadow" data-toggle='tooltip' data-placement='right' title='Delete game.')
