extends layout

block extrastylesheets
    link(rel="stylesheet" href="/css/index.css")
    link(href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css')



block extrascripts
    script(src="/js/welcome-screen.js")

block content

    +navbar

    div(class="container vertical-center parent" id="#masterbox")

        div(class="container span4 text-center child userbox" id="loginbox")
            h1(style="white-space:pre")
                | #{title}
                br
                br
                | #{message}
                br
                br

            form(name="logins" id="loginfo" method="post" action="/auth/local")
                div(class="form-group col-md-8 col-md-7 col-md-offset-4")
                    input(
                        type="input",
                        name="usrname",
                        placeholder="Email",
                        class="form-control input-lg center-text no-border-radius infofield"
                        )
                div(class="form-group col-md-8 col-md-7 col-md-offset-4")
                    input(
                        type="password",
                        name="pswd",
                        placeholder="Password",
                        class="form-control input-lg center-text infofield"
                        )
            div(class="form-group")
                div(class="form-group text-center")
                    button(class="btn btn-info btn-lg center-in-div no-border-radius",
                        type="button",
                        id="login")
                        | Login
                    button(class="btn btn-warning btn-lg center-in-div no-border-radius",
                        type="button",
                        id="register",
                        )
                        | Register
                    br
                    br
                p(id="errorlabel") #{errormsg}
                p Or sign in with Google or Facebook
                a(href="/auth/google" class="btn btn-danger circle")
                    span(class="fa fa-google-plus")
                a(class="btn btn-info circle" style="background:#425F9C;border-color:#425F9C")
                    span(class="fa fa-facebook")

        div(class="container span4 text-center child userbox" id="registerWindow")
            h1(style="white-space:pre" id="registererror") Submit this form to register
            h4(id="l_name" style="white-space:pre") Name Must be Between 5 and 15 characters
            h4(id="l_email" style="white-space:pre") Email must be in a valid format (test@domain.com)
            h4(id="l_password" style="white-space:pre") Password must be at least 5 characters long
            h4(id="l_match" style="white-space:pre") Passwords must match
            br
            form(name="signup" id="signupform")
                div(class="form-group col-md-8 col-md-7 col-md-offset-4")
                    input(
                        type="text",
                        name="r_name",
                        placeholder="Name",
                        class="form-control input-lg center-text no-border-radius infofield",
                        autocomplete="off"
                        )
                div(class="form-group col-md-8 col-md-7 col-md-offset-4")
                    input(
                        type="text",
                        name="r_usrname",
                        placeholder="Email",
                        class="form-control input-lg center-text no-border-radius infofield",
                        autocomplete="off"
                        )
                div(class="form-group col-md-8 col-md-7 col-md-offset-4")
                    input(
                        type="password",
                        name="r_pswd",
                        placeholder="Password",
                        class="form-control input-lg center-text infofield"
                        )
                div(class="form-group col-md-8 col-md-7 col-md-offset-4")
                    input(
                        type="password",
                        name="r_pswd_2",
                        placeholder="Confirm Password",
                        class="form-control input-lg center-text infofield"
                        )
                button(type="button" id="regbutton" class="btn btn-info no-border-radius") Confirm Registration
                button(type="button" class="btn btn-warning no-border-radius" id="closereg") Close
