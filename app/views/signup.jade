extends layout

block extrascripts
    //script(src="/js/tournament-configuration.js")

block extrastylesheets
    link(rel="stylesheet" href="/css/home.css")
    link(rel="stylesheet" href="/css/tournamentstyle.css")
    link(href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css')


block content

    div(class="jumbotron vertical-center")
        div(class="container")
            div(style="margin:20px; margin-bottom:50px")
            div(class="row")
                div(class="col-xs-12")
                    if tournament.openRegistration
                        div(class="alert alert-success")
                            p Registration for this tournament is open!
                    else
                        div(class="alert alert-danger")
                            p Registration for this tournament is closed!

            div(class="row")
                div(class="col-xs-12" style="text-align:center")
                    h2(class="title") #{tournament.tournament_name}

            br

            div(class="row")
                div(class="col-xs-6")
                    h2(class="title") #{tournament.tournament_name} Information.
                    div(class="panel-body")
                        div(class="row")
                            div(class="smallbox")

                                div(class="form-group")
                                    input(readonly,
                                        type="text",
                                        value="Name: #{tournament.tournament_name}",
                                        class="form-control input-lg center-text no-border-radius tournament-info-field",
                                        style="background-color:#363B40")
                                div(class="form-group")
                                    input(readonly,
                                        type="text",
                                        value="Director Email: #{tournament.directoremail}",
                                        class="form-control input-lg center-text no-border-radius tournament-info-field",
                                        style="background-color:#363B40")
                                div(class="form-group")
                                    input(readonly,
                                        type="text",
                                        value="Location: #{tournament.location}",
                                        class="form-control input-lg center-text no-border-radius tournament-info-field",
                                        style="background-color:#363B40")

                                div(class="form-group")
                                    if tournament.date != null
                                        - var date = tournament.date.getMonth() + "/" + tournament.date.getDay() + "/" + tournament.date.getFullYear()
                                        input(readonly,
                                            type="text",
                                            value="Date: #{date}",
                                            class="form-control input-lg center-text no-border-radius tournament-info-field",
                                            style="background-color:#363B40")

                                div(class="form-group")
                                    input(readonly,
                                        type="text",
                                        value="Question Set: #{tournament.questionSet}",
                                        class="form-control input-lg center-text no-border-radius tournament-info-field",
                                        style="background-color:#363B40")

                                div(class="form-group")
                                    if tournament.openRegistration
                                        input(readonly,
                                            type="text",
                                            value="Registration is open",
                                            class="form-control input-lg center-text no-border-radius tournament-info-field",
                                            style="background-color:#363B40")
                                    else
                                        input(readonly,
                                            type="text",
                                            value="Registration is closed",
                                            class="form-control input-lg center-text no-border-radius tournament-info-field",
                                            style="background-color:#363B40")

                                div(class="form-group")
                                    textarea(readonly,
                                        class="form-control input-lg center-text no-border-radius tournament-info-field",
                                        style="background-color:#363B40") Description:&#10#{tournament.description}

                div(class="col-xs-6")
                    if director != null
                        h2(class="title") Sign up for #{tournament.tournament_name} here.
                    else
                        h2(class="title") Sign up here. You can access this signup later if you log in.
                            a(href="/" class="btn btn-md btn-stats" target="_blank") Login

                    div(class="panel-body")
                        div(class="row")
                            div(class="smallbox")
                                if tournament.openRegistration
                                    form()
                                        div(class="form-group")
                                            input(
                                                type="text",
                                                name="team_name",
                                                placeholder="Team Name",
                                                class="form-control input-lg center-text no-border-radius tournament-info-field"
                                            )
                                        div(class="form-group")
                                            input(
                                                type="number",
                                                name="teamnumber",
                                                placeholder="Number of Teams",
                                                class="form-control input-lg center-text no-border-radius tournament-info-field"
                                            )
                                        div(class="form-group")
                                            input(
                                                class="form-control input-lg center-text no-border-radius tournament-info-field",
                                                placeholder="Email",
                                                name="email"
                                            )
                                        div(class="form-group")
                                            textarea(
                                                class="form-control input-lg center-text no-border-radius tournament-info-field",
                                                placeholder="Other Information",
                                                name="otherinfo"
                                            )
                                        button(type="button" class="btn btn-lg btn-stats no-border-radius") Confirm Registration

                                else
                                    div(class="form-group")
                                        input(readonly,
                                            type="text",
                                            placeholder="Registration for this tournament is closed",
                                            class="form-control input-lg center-text no-border-radius tournament-info-field",
                                            style="background-color:#363B40"
                                        )
