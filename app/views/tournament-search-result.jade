div(class="row")
    div(class="col-md-12")
        table(class="table table-hover table-striped table-condensed")
            thead
                tr()
                    th(class="table-head" style='text-align:center') Name
                    th(class="table-head" style='text-align:center') Question set
                    th(class="table-head" style='text-align:center') Link to Stats
                    // th(class="table-head" style='text-align:center') Download Stats
            tbody
                each val, i in tournaments
                    tr()
                        td(style='text-align:center') #{tournaments[i].tournament_name}
                        td(style='text-align:center') #{tournaments[i].questionSet}
                        td(style='text-align:center')
                            div(class='col-md-12')
                                a(href="/t/" + "#{tournaments[i].shortID}" + "/stats" target='_blank') #{tournaments[i].tournament_name} Stats
