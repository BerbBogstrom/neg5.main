extends layout

block content

    +sidebar

    div(id="page-wrapper")

        div(id="page-inner")
            div(class="row")
                div(class="col-md-12")
                    h3 Manage Your Tournaments

            div(class="row")
                div(class="col-md-12")
                    div(class="panel panel-default")
                        div(class="panel-heading") You can view all your tournaments on this page. Click the edit link next to each tournament to add games, add scores, or change information about it.

                        div(class="panel-body")
                            div(class="table-responsive")
                                table(class="table table-striped table-bordered table-hover" id="dataTables-example")
                                    thead
                                        tr
                                            // ID kept for debugging
                                            th ID
                                            th Name
                                            th Location
                                            th Date
                                            th Open Registration
                                            th Question set
                                            th Number of Teams Registered
                                            th Edit This Tournament
                                    tbody
                                        each val in tournaments
                                            tr(class="odd")
                                                td #{val._id}
                                                td #{val.name}
                                                td #{val.location}
                                                td #{val.date.toString()}
                                                if val.openRegistration
                                                    td Yes
                                                else
                                                    td No
                                                td #{val.questionSet}
                                                td #{val.teams.length}
                                                td
                                                    a(class="btn btn-sm btn-info glyphicon glyphicon-pencil no-border-radius"
                                                        href="/home/tournaments?_id=" + val._id)
